version: '3.8'

# 预发布环境配置
services:
  mysql:
    container_name: mall-mysql-staging
    volumes:
      - mysql-data-staging:/var/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD=zhx199710085470
      - MYSQL_DATABASE=shop
    command: --default-authentication-plugin=mysql_native_password --character-set-server=utf8mb4 --collation-server=utf8mb4_unicode_ci

  mall-server:
    container_name: mall-server-staging
    build:
      context: ./mall-server
      dockerfile: Dockerfile
    environment:
      - NODE_ENV=production # 预发布环境使用生产级配置
      - DB_HOST=mysql
      - PORT=8080
      - DB_NAME=shop
      - DB_USER=root
      - DB_PASSWORD=zhx199710085470
      - API_PREFIX=/api
      - LOG_LEVEL=info
      - ENABLE_MOCK=false
      - JWT_SECRET=staging-secret-key
    # 配置健康检查
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  mall-admin:
    container_name: mall-admin-staging
    build:
      args:
        - BUILD_MODE=staging
        - BUILD_TIME=${BUILD_TIME:-$(date -u +'%Y-%m-%dT%H:%M:%SZ')}
        - DEPLOY_ENV=staging
    environment:
      - VITE_API_URL=http://staging.api.example.com
      - VITE_USE_MOCK=false
      - VITE_USE_DEVTOOLS=true
      - DEPLOY_ENV=staging
    # 配置健康检查
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:80/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

volumes:
  mysql-data-staging: 