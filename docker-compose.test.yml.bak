version: '3.8'

# 测试环境配置
services:
  mysql:
    container_name: mall-mysql-test
    volumes:
      - mysql-data-test:/var/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD=zhx199710085470
      - MYSQL_DATABASE=shop
    command: --default-authentication-plugin=mysql_native_password --character-set-server=utf8mb4 --collation-server=utf8mb4_unicode_ci

  mall-server:
    container_name: mall-server-test
    build:
      context: ./mall-server
      dockerfile: Dockerfile
    environment:
      - NODE_ENV=test
      - DB_HOST=mysql
      - PORT=8080
      - DB_NAME=shop
      - DB_USER=root
      - DB_PASSWORD=zhx199710085470
      - API_PREFIX=/api
      - LOG_LEVEL=info
      - ENABLE_MOCK=false
      - JWT_SECRET=test-secret-key

  mall-admin:
    container_name: mall-admin-test
    build:
      args:
        - BUILD_MODE=test
    environment:
      - VITE_API_URL=http://api.test.example.com
      - VITE_USE_MOCK=false
      - VITE_USE_DEVTOOLS=false

volumes:
  mysql-data-test: 