.custom-nav-bar {
  width: 100%;
  box-sizing: border-box;
  z-index: 99;
}

.fixed {
  position: fixed;
  top: 0;
  left: 0;
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.nav-bar-left {
  position: absolute;
  left: 15px;
  display: flex;
  align-items: center;
  height: 100%;
}

.nav-bar-title {
  flex: 1;
  text-align: center;
  font-size: 17px;
  font-weight: 500;
}

.nav-bar-right {
  position: absolute;
  right: 15px;
  display: flex;
  align-items: center;
  height: 100%;
} 