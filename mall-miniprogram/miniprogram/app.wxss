/**app.wxss**/
page {
  --primary-color: #FF5777;
  --price-color: #FF5777;
  --text-color: #333333;
  --light-text-color: #999999;
  --background-color: #F8F8F8;
  --border-color: #EEEEEE;
  
  font-size: 28rpx;
  color: var(--text-color);
  background-color: var(--background-color);
  box-sizing: border-box;
}

/* 清除浮动 */
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

/* 文本省略号 */
.text-ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 多行文本省略号 */
.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 价格样式 */
.price {
  color: var(--price-color);
  font-weight: bold;
}

.price::before {
  content: '¥';
  font-size: 80%;
  margin-right: 2rpx;
}

/* 按钮基础样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

.btn-primary {
  background-color: var(--primary-color);
  color: #FFFFFF;
}

.btn-default {
  background-color: #FFFFFF;
  color: var(--text-color);
  border: 1rpx solid var(--border-color);
}

/* 商品布局样式 */
.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.goods-item {
  width: 345rpx;
  margin: 20rpx 10rpx;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-img {
  width: 100%;
  height: 345rpx;
}

.goods-info {
  padding: 16rpx;
}

.goods-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.goods-price {
  font-size: 32rpx;
}

.goods-stock {
  font-size: 24rpx;
  color: var(--light-text-color);
  margin-top: 10rpx;
}

.add-cart {
  margin-top: 10rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
} 