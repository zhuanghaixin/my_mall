/**index.wxss**/
.container {
  padding-bottom: 100rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 30rpx;
  background-color: #FF5777;
}

.search-input {
  width: 100%;
}

/* 轮播图 */
.swiper-container {
  width: 100%;
  height: 350rpx;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
}

/* 推荐商品 */
.section {
  margin-top: 30rpx;
  background-color: #FFFFFF;
  padding: 20rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 30rpx 20rpx;
  color: #333333;
}

.recommend-scroll {
  width: 100%;
  white-space: nowrap;
}

.recommend-list {
  padding: 0 20rpx;
  display: inline-flex;
}

.recommend-item {
  width: 240rpx;
  margin: 0 10rpx;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  overflow: hidden;
  display: inline-block;
}

.recommend-img {
  width: 240rpx;
  height: 240rpx;
  background-color: #F8F8F8;
}

.recommend-info {
  padding: 10rpx;
}

.recommend-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.recommend-price {
  font-size: 30rpx;
}

.recommend-loading {
  width: 240rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 分类标签 */
.category-tabs {
  border-bottom: 1rpx solid #EEEEEE;
  background-color: #FFFFFF;
}

.category-scroll {
  width: 100%;
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.category-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  position: relative;
  color: #666666;
}

.category-item.active {
  color: #FF5777;
  font-weight: bold;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #FF5777;
  border-radius: 3rpx;
}

/* 商品列表 */
.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.goods-item {
  width: 345rpx;
  margin: 10rpx;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-img {
  width: 100%;
  height: 345rpx;
  background-color: #F8F8F8;
}

.goods-info {
  padding: 16rpx;
}

.goods-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  line-height: 36rpx;
  height: 72rpx;
}

.goods-price {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.goods-stock {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.add-cart {
  font-size: 24rpx;
  padding: 10rpx 0;
  width: 100%;
  border-radius: 30rpx;
}

.goods-loading {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999999;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999999;
  font-size: 24rpx;
} 