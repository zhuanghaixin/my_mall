.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

/* 表单样式 */
.form {
  background-color: #fff;
  padding: 0 30rpx;
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.form-input {
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
}

.form-textarea {
  width: 100%;
  height: 120rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.placeholder {
  color: #999;
}

.region-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #999;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-item .form-label {
  margin-bottom: 0;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #ff4444;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
}

/* 地区选择器 */
.region-picker-popup {
  position: fixed;
  bottom: -600rpx;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 1001;
  transition: all 0.3s;
}

.region-picker-popup.show {
  bottom: 0;
}

.region-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.region-cancel {
  font-size: 30rpx;
  color: #999;
}

.region-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.region-confirm {
  font-size: 30rpx;
  color: #ff4444;
}

.region-picker-view {
  width: 100%;
  height: 500rpx;
}

.picker-item {
  line-height: 50px;
  text-align: center;
  font-size: 28rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
} 