/* 隐藏原有标题栏，使用导航栏代替 */
.header {
  display: none;
}

.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 120rpx; /* 增加底部留白，避免按钮遮挡内容 */
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

/* 表单样式 */
.form {
  background-color: #fff;
  padding: 0 30rpx;
  margin-top: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-input {
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  width: 100%;
}

.form-textarea {
  width: 100%;
  height: 120rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  padding: 10rpx 0;
}

.placeholder {
  color: #999;
}

.region-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #f9f9f9;
  padding: 0 20rpx;
  border-radius: 8rpx;
}

.arrow {
  color: #999;
  font-size: 24rpx;
  transition: transform 0.3s;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-item .form-label {
  margin-bottom: 0;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.save-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #ff4444;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  font-weight: 500;
  letter-spacing: 4rpx;
  transition: opacity 0.2s;
}

.save-btn:active {
  opacity: 0.8;
}

/* 地区选择器 */
.region-picker-popup {
  position: fixed;
  bottom: -600rpx;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 1001;
  transition: all 0.3s ease;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.region-picker-popup.show {
  bottom: 0;
}

.region-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.region-cancel {
  font-size: 30rpx;
  color: #666;
  padding: 10rpx;
}

.region-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.region-confirm {
  font-size: 30rpx;
  color: #ff4444;
  padding: 10rpx;
}

.region-picker-view {
  width: 100%;
  height: 500rpx;
}

.picker-item {
  line-height: 50px;
  text-align: center;
  font-size: 28rpx;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  transition: opacity 0.3s;
} 