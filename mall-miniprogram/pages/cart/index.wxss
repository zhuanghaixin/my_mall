/* pages/cart/index.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 100px;
}

.cart-list {
  padding: 10px;
}

.delete-btn {
  width: 65px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff4646;
  color: white;
  font-size: 14px;
}

.select-all {
  margin-left: 15px;
}

.empty-cart {
  padding-top: 100px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.start-shopping {
  margin-top: 30px;
}

.cart-title {
  text-align: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

.cart-content {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
}