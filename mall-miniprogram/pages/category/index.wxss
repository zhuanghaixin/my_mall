/* pages/category/index.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.category-container {
  display: flex;
  width: 100%;
  height: calc(100vh - 110px);
}

.sidebar {
  width: 85px;
  height: 100%;
  background-color: #f7f8fa;
}

.content {
  flex: 1;
  height: 100%;
  padding: 15px;
  box-sizing: border-box;
  background-color: #ffffff;
}

.subcategory-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}

.subcategory-grid {
  padding-bottom: 20px;
}

.no-subcategory {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100px;
  color: #999;
  font-size: 14px;
}

.category-title {
  text-align: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

.category-content {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
}