.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.address-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.address-empty {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  color: #ccc;
  font-size: 32rpx;
}

.order-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.remark-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.remark-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #ff5000;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background-color: #ccc;
} 