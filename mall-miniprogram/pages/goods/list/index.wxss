/* 商品列表页样式 */
.container {
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 搜索区域 */
.search-section {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
}

/* 筛选排序区域 */
.filter-section {
  position: sticky;
  top: 54px;
  z-index: 99;
}

/* 商品列表区域 */
.goods-section {
  flex: 1;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 空状态样式 */
.empty-view {
  padding: 100rpx 0;
}

/* 商品列表 */
.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 商品项 */
.goods-item {
  width: 49%;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 商品图片 */
.goods-image {
  width: 100%;
  height: 360rpx;
  background-color: #f5f5f5;
}

/* 商品信息 */
.goods-info {
  padding: 16rpx;
}

/* 商品名称 */
.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 80rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 商品价格 */
.goods-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.price {
  font-size: 32rpx;
  color: #ff6b81;
  font-weight: bold;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 12rpx;
}

/* 商品销量 */
.goods-sales {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
}

/* 无更多数据 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
} 