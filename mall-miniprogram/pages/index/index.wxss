/**index.wxss**/
/* 容器样式 */
.container {
  padding-bottom: 180rpx;
  box-sizing: border-box;
}

.scrollarea {
  height: 100vh;
}

/* 搜索框 */
.search-container {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}

/* 轮播图 */
.banner {
  width: 100%;
  margin: 0;
  background-color: #fff;
}

.swipe-container {
  width: 100%;
  height: 350rpx;
}

.swipe-image {
  width: 100%;
  display: block;
}

/* 推荐商品 */
.section-title {
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.recommend-section {
  background-color: #fff;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
}

.recommend-scroll {
  width: 100%;
  white-space: nowrap;
}

.recommend-list {
  display: flex;
  padding: 0 20rpx;
}

.recommend-item {
  width: 220rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.recommend-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
}

.recommend-name {
  font-size: 28rpx;
  margin-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommend-price {
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #e4393c;
}

.price {
  color: #e4393c;
  font-weight: bold;
}

/* 分类 */
.category-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

.category-tabs {
  display: flex;
  padding: 0 20rpx;
  overflow-x: auto;
  white-space: nowrap;
  border-bottom: 1rpx solid #f2f2f2;
}

.category-tab {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  position: relative;
  white-space: nowrap;
}

.category-tab.active {
  color: #e4393c;
}

.category-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #e4393c;
}

/* 商品网格 */
.goods-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.goods-item {
  width: 345rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-item:nth-child(odd) {
  margin-right: 20rpx;
}

.goods-image {
  width: 345rpx;
  height: 345rpx;
}

.goods-name {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-price {
  font-size: 30rpx;
  padding: 0 20rpx;
}

.goods-stock {
  font-size: 24rpx;
  color: #999;
  padding: 5rpx 20rpx;
}

.add-cart {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  margin: 10rpx 20rpx 20rpx;
  background-color: #e4393c;
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
}

/* 加载更多样式 */
.loading-more {
  width: 100%;
  padding: 30rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  border: 2rpx solid #e4393c;
  border-color: #e4393c transparent transparent transparent;
  border-radius: 50%;
  animation: loading 1s infinite linear;
}

@keyframes loading {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.no-more, .has-more {
  padding: 20rpx 0;
}
