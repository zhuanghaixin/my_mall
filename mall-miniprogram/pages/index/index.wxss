/**index.wxss**/
/* 容器样式 */
.container {
  padding-bottom: 100rpx;
}

/* 导航栏 */
.custom-nav {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: #fff;
  padding: 10rpx 0;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 350rpx;
  margin-top: 100rpx;
}

.banner swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 推荐商品 */
.section-title {
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.recommend-section {
  background-color: #fff;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
}

.recommend-scroll {
  width: 100%;
  white-space: nowrap;
}

.recommend-list {
  display: flex;
  padding: 0 20rpx;
}

.recommend-item {
  width: 220rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.recommend-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
}

.recommend-name {
  font-size: 28rpx;
  margin-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommend-price {
  font-size: 28rpx;
  margin-top: 10rpx;
}

/* 分类 */
.category-section {
  background-color: #fff;
  margin-top: 20rpx;
}

.category-tabs {
  display: flex;
  padding: 0 20rpx;
  overflow: auto;
  border-bottom: 1rpx solid #f2f2f2;
}

.category-tab {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  position: relative;
  white-space: nowrap;
}

.category-tab.active {
  color: #e4393c;
}

.category-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #e4393c;
}

/* 商品网格 */
.goods-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.goods-item {
  width: 345rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-item:nth-child(odd) {
  margin-right: 20rpx;
}

.goods-image {
  width: 345rpx;
  height: 345rpx;
}

.goods-name {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-price {
  font-size: 30rpx;
  padding: 0 20rpx;
}

.goods-stock {
  font-size: 24rpx;
  color: #999;
  padding: 5rpx 20rpx;
}

.add-cart {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  margin: 10rpx 20rpx 20rpx;
  background-color: #e4393c;
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
}
