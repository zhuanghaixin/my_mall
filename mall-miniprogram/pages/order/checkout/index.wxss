/* pages/order/checkout/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

/* 地址部分 */
.address-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.address-content {
  display: flex;
  width: 100%;
  align-items: center;
}

.address-info {
  flex: 1;
}

.address-name-phone {
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.address-arrow {
  padding-left: 20rpx;
}

.arrow {
  color: #999;
  font-size: 28rpx;
}

.address-empty {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-empty-text {
  font-size: 30rpx;
  color: #666;
}

/* 商品部分 */
.goods-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.goods-list {
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-specs {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.goods-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 28rpx;
  color: #ff4444;
  font-weight: 500;
}

.goods-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 配送方式 */
.delivery-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.delivery-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}

.delivery-label {
  font-size: 28rpx;
  color: #333;
}

.delivery-value {
  font-size: 28rpx;
  color: #ff4444;
}

/* 订单备注 */
.remark-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.remark-content {
  padding-top: 20rpx;
}

.remark-input {
  height: 70rpx;
  font-size: 28rpx;
  color: #333;
}

/* 金额信息 */
.amount-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.amount-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
}

.amount-value {
  font-size: 28rpx;
  color: #333;
}

/* 底部支付栏 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-amount {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 36rpx;
  color: #ff4444;
  font-weight: 500;
}

.submit-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #ff4444;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  padding: 0;
}

.submit-btn[disabled] {
  background-color: #cccccc !important;
  color: #fff !important;
}