/* pages/order/detail/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

.header {
  display: none;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

/* 状态卡片 */
.status-card {
  background-color: #ff4444;
  color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #ff4444;
  padding-left: 20rpx;
}

/* 地址卡片 */
.address-content {
  padding: 10rpx 0;
}

.address-name-phone {
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 订单信息 */
.order-info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.item-label {
  color: #666;
  min-width: 180rpx;
}

.item-value {
  color: #333;
  flex: 1;
}

.copy-btn {
  color: #576b95;
  margin-left: 20rpx;
}

/* 商品列表 */
.goods-list {
  margin-top: 20rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-specs {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.goods-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 28rpx;
  color: #ff4444;
  font-weight: 500;
}

.goods-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 金额信息 */
.amount-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.amount-item .item-label {
  color: #666;
  min-width: auto;
}

.amount-item .item-value {
  color: #333;
  text-align: right;
}

.total-amount {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.total-amount .item-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.total-amount .item-value {
  font-size: 30rpx;
  font-weight: 500;
  color: #ff4444;
}

/* 底部按钮 */
.footer-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.btn-group {
  display: flex;
  justify-content: flex-end;
}

.btn {
  margin-left: 20rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background-color: #fff;
}

.btn-cancel {
  color: #666;
  border: 1rpx solid #ccc;
}

.btn-pay {
  color: #fff;
  background-color: #ff4444 !important;
  border: 1rpx solid #ff4444;
}

.btn-contact {
  color: #576b95;
  border: 1rpx solid #576b95;
}

.btn-logistics {
  color: #666;
  border: 1rpx solid #ccc;
}

.btn-confirm {
  color: #ff4444;
  border: 1rpx solid #ff4444;
}

.btn-delete {
  color: #666;
  border: 1rpx solid #ccc;
}