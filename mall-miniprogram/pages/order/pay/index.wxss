/* pages/order/pay/index.wxss */
.pay-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 支付头部 */
.pay-header {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.pay-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.pay-countdown {
  display: flex;
  align-items: center;
  color: #666666;
  font-size: 28rpx;
}

.countdown-time {
  color: #ff4d4f;
  font-weight: bold;
  margin-left: 10rpx;
}

/* 支付金额 */
.pay-amount {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.amount-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.amount-value {
  font-size: 60rpx;
  font-weight: bold;
  color: #ff4d4f;
}

/* 支付方式 */
.pay-methods {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.methods-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333333;
}

.methods-list {
  display: flex;
  flex-direction: column;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eeeeee;
  position: relative;
}

.method-item:last-child {
  border-bottom: none;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.method-info {
  flex: 1;
}

.method-name {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 6rpx;
}

.method-desc {
  font-size: 24rpx;
  color: #999999;
}

.method-selected {
  margin-left: 20rpx;
}

.selected {
  background-color: rgba(7, 193, 96, 0.05);
  border-radius: 8rpx;
}

/* 订单信息 */
.order-info {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333333;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666666;
}

.info-value {
  color: #333333;
}

/* 支付按钮 */
.pay-action {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

.btn-cancel, .btn-confirm {
  width: 48%;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666666;
  border: 1rpx solid #dddddd;
}

.btn-confirm {
  background-color: #07c160;
  color: #ffffff;
} 