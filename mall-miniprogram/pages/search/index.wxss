/* 搜索页样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #fff;
  padding-bottom: 30rpx;
}

/* 搜索框样式 */
.search-header {
  padding: 20rpx 0;
  width: 100%;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 搜索历史部分 */
.search-history {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

/* 热门搜索部分 */
.hot-search {
  padding: 0 30rpx;
}

/* 标题栏样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 标签外观 */
.tags-wrapper {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.tag-item {
  margin: 10rpx;
}

/* 空状态 */
.empty-view {
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
}

/* 加载中状态 */
.loading-view {
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 热门搜索词中的计数样式 */
.hot-count {
  font-size: 20rpx;
  margin-left: 8rpx;
  opacity: 0.8;
}

/* 高亮标签样式 */
.van-tag--highlight {
  background-color: #ff6b81 !important;
  color: #fff !important;
}

/* 自定义van-tag样式 */
.van-tag {
  display: inline-flex;
  align-items: center;
  padding: 0 24rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
}

/* 标签悬停效果 */
.tag-item {
  transition: transform 0.2s;
}

.tag-item:active {
  transform: scale(0.95);
} 