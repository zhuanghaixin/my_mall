/* pages/test/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #3498db;
  padding-left: 16rpx;
}

.btn {
  background-color: #f2f2f2;
  color: #333;
  margin: 20rpx 0;
  font-size: 28rpx;
}

.btn-primary {
  background-color: #3498db;
  color: #fff;
}

.image-container {
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.test-image {
  width: 100%;
  height: 300rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.image-url {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  word-break: break-all;
}

.result-box {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-content {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.file-info {
  font-size: 24rpx;
  color: #666;
  margin: 10rpx 0;
  word-break: break-all;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.image-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  overflow: hidden;
}

.server-image {
  width: 100%;
  height: 200rpx;
  background-color: #eee;
}

.image-name {
  font-size: 22rpx;
  color: #666;
  padding: 10rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 30rpx;
} 