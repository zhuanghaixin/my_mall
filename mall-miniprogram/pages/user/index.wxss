/* pages/user/index.wxss */
.container {
  padding-bottom: 120rpx;
  background-color: #f5f5f5;
}

/* 用户信息区域 */
.user-info-section {
  position: relative;
  width: 100%;
  background-color: #ff4444;
  padding: 20rpx 30rpx;
  color: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-right: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.account {
  font-size: 26rpx;
  opacity: 0.8;
}

.login-btn {
  font-size: 30rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  display: inline-block;
  margin-top: 10rpx;
}

/* 退出登录按钮 */
.logout-btn {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

/* 订单区域 */
.order-section, .service-section {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
}

.more {
  font-size: 26rpx;
  color: #999;
}

.order-types {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.icon-wrapper {
  position: relative;
  margin-bottom: 16rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff4444;
  color: #fff;
  font-size: 20rpx;
  height: 32rpx;
  min-width: 32rpx;
  padding: 0 6rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 服务区域 */
.service-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.service-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.service-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 16rpx;
}

/* 修正文本内容 */
.order-item text, .service-item text {
  font-size: 26rpx;
  color: #333;
}