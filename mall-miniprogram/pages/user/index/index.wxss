/* pages/user/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 90rpx 30rpx 20rpx;
  background-color: #ff4444;
  z-index: 10;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  text-align: center;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  margin-top: 140rpx;
  background-color: #ff4444;
  color: #fff;
}

.avatar-box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #f5f5f5;
}

.avatar {
  width: 100%;
  height: 100%;
}

.login-tip {
  font-size: 36rpx;
  font-weight: 500;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.phone {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 卡片通用样式 */
.card {
  margin: 30rpx 20rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.card-more {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}

.arrow {
  width: 12rpx;
  height: 12rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
  margin-left: 8rpx;
}

/* 订单图标 */
.order-icons {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
}

.order-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-wrapper image {
  width: 100%;
  height: 100%;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff4444;
  color: #fff;
  font-size: 22rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 18rpx;
  padding: 0 6rpx;
  z-index: 1;
}

/* 自定义图标 */
.custom-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #ff4444;
  position: relative;
}

/* 订单图标样式 */
.order-unpaid::before {
  content: "￥";
  font-weight: bold;
}

.order-unshipped::before {
  content: "📦";
}

.order-unreceived::before {
  content: "🚚";
}

.order-completed::before {
  content: "✓";
  font-weight: bold;
}

/* 工具图标样式 */
.tool-address::before {
  content: "📍";
}

.tool-favorite::before {
  content: "❤️";
}

.tool-setting::before {
  content: "⚙️";
}

.tool-service::before {
  content: "💬";
}

/* 工具栏 */
.tools-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  padding: 20rpx 0;
}

.tool-item .custom-icon {
  margin-bottom: 16rpx;
}

.tool-item text {
  font-size: 26rpx;
  color: #666;
}

/* 退出登录按钮 */
.logout-wrapper {
  padding: 40rpx 30rpx 30rpx;
  margin-top: 20rpx;
}

.logout-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  color: #ff4444;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: 1rpx solid #ff4444;
}