/* pages/user/setting/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 设置列表样式 */
.settings-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 30rpx;
  color: #333;
}

.setting-value {
  font-size: 28rpx;
  color: #999;
}

.setting-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(45deg);
  margin-left: 10rpx;
}

.exit-btn {
  margin-top: 40rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #ff4444;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
}